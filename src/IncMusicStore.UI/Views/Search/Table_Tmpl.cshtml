@using (var template = Html.Incoding().Template<SearchAlbumQuery.Response>())
{
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Artist</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @using (var each = template.ForEach())
            {
                <tr>
                    <td>@each.For(r => r.Title)</td>
                    <td>@each.For(r => r.Genre)</td>
                    <td>@each.For(r => r.Artist)</td>
                    <td>@each.For(r => r.Price)</td>
                </tr>
            }
        </tbody>        
    </table>
}
